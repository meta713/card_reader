<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="300.0" prefWidth="275.0"
	hgap="10.0" vgap="10.0"
	alignment="CENTER"
	xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="sample.Controller">
	<Label text="登録フォーム" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
	<Label fx:id="label1" text="名前:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
	<TextField fx:id="text1" GridPane.columnIndex="3" GridPane.rowIndex="2" PromptText="your name"/>
	<Label fx:id="label2" text="学籍番号:" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
	<TextField fx:id="text2" GridPane.columnIndex="3" GridPane.rowIndex="3" PromptText="your student's number"/>
	<Label fx:id="label3" text="電話番号:" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
	<TextField fx:id="text3" GridPane.columnIndex="3" GridPane.rowIndex="4" PromptText="your phone number"/>
	<Label fx:id="label4" text="メールアドレス:" GridPane.columnIndex="2" GridPane.rowIndex="5"/>
	<TextField fx:id="text4" GridPane.columnIndex="3" GridPane.rowIndex="5" PromptText="your e-mail address"/>
	<Button text="確認" GridPane.columnIndex="4" GridPane.rowIndex="5" onAction="#buttonAction"/>
</GridPane>